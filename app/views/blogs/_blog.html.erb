<div class="content_post">
 <div class="main_title">
　<caption><%= blog.title %></caption>
 </div>
    <% if user_signed_in? && current_user.id == blog.user_id %>
      <div class="more">
        <ul class="more_list">
          <li class="box1">
            <%= link_to '編集', "/blogs/#{blog.id}/edit",style: "color:white;", method: :get %>
          </li>
          <li class="box2">
            <%= link_to '削除', "/blogs/#{blog.id}", style: "color:white;", method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <%= simple_format(blog.text) %>
    <span class="name">
        <span>投稿者 :</span><%= blog.user.nickname%>
    </span>
    <span class="date">
        <span>投稿日 :</span><%= blog.updated_at%>
    </span>
</div>
